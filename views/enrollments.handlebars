<h1>ENROLLMENTS</h1>


<form id="Add">
    <fieldset>
        <legend>Add Enrollment</legend>
        <div>
            <label for="addCid">Class Name: </label>
            <input type="text" name="addCid" id="addCid">
        </div>
        <br>
        <div>
            <label for="addSid">Student ID: </label>
            <input type="text" name="addSid" id="addSid">
        </div>
        <br>
        <div>
            <label for="grade">Grade: </label>
            <input type="text" name="grade" id="grade">
        </div>
        <br>
        <div>
            <input type="submit" id="addSub">
        </div>
    </fieldset>
</form>

<form id='Search'>
    <fieldset>
        <legend>Search Enrollments</legend>
        <div>
            <label for="sCid"> By Class Name: </label>
            <input type="text" name="sCid" id="sCid">
            <input type="submit" id='searchClass'>
        </div>
        <br>
        <div>
            <label for="sSid">By Student ID: </label>
            <input type="text" name="sSid" id="sSid">
            <input type="submit" id='searchStudent'>
        </div>

    </fieldset>
</form>

